{% extends 'base.html.twig' %}

{% block title %}Team index{% endblock %}

{% block body %}
    <h1>Team index</h1>

    {% if teams is empty %}
        <p>Aucune équipe encore créée, tu peux en créer une juste ici ↓</p>
    {% else %}
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for team in teams %}
                <tr>
                    <td>{{ team.id }}</td>
                    <td>{{ team.name }}</td>
                    <td>
                        <a href="{{ path('app_team_show', {'id': team.id}) }}">show</a>
                        <a href="{{ path('app_team_edit', {'id': team.id}) }}">edit</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}

    <a href="{{ path('app_team_new') }}">Create new</a>
{% endblock %}
